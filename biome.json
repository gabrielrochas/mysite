{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/dist", "!**/.next"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noChildrenProp": "info"
			},
			"nursery": {
				"useSortedClasses": "warn"
			},
			"style": {
				"useImportType": {
					"level": "warn",
					"options": {
						"style": "auto"
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["react", "next/**"],
							":BLANK_LINE:",
							[":PACKAGE:", "!@repo/**"],
							":BLANK_LINE:",
							["@repo/**"],
							":BLANK_LINE:",
							["@/**"],
							":BLANK_LINE:",
							"**"
						]
					}
				}
			}
		}
	}
}
